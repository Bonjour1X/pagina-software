# Nuevas clases
<h1>Crear Nueva Clase</h1>

<%= form_with(model: @clase, local: true) do |form| %>  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :scheduled_date %>
    <%= form.datetime_field :scheduled_date %>
  </div>

  <div>
    <%= form.label :materials %>
    <%= form.text_area :materials %>
  </div>

  <div>
    <%= form.label :modality %>
    <%= form.select :modality, ['Presencial', 'Virtual'] %>
  </div>

  <%= form.submit 'Crear Clase' %>
<% end %>