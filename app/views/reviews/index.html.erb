<h2>Reseñas para <%= @course.title %></h2>

<%= link_to 'Volver al Curso', course_path(@course), class: 'btn btn-secondary' %>

<% if @course.enrollment_requests.find_by(user: current_user)&.status == "approved" && current_user != @course.user %>
  <%= link_to 'Escribir Reseña', new_course_review_path(@course), class: 'btn btn-primary' %>
<% end %>

<div class="reviews-list">
  <% if @reviews.any? %>
    <% @reviews.each do |review| %>
      <div class="review-card">
        <div class="review-header">
          <strong><%= review.user.name %></strong>
          <span><%= review.created_at.strftime("%d/%m/%Y") %></span>
        </div>
        
        <div class="rating">
          <%= "★" * review.rating %><%= "☆" * (5 - review.rating) %>
        </div>

        <div class="review-content">
          <%= review.content %>
        </div>

        <div class="review-actions">
          <% if review.user == current_user %>
            <%= link_to 'Editar', 
                edit_course_review_path(@course, review), 
                class: 'btn btn-sm btn-secondary' %>
            
            <%= button_to 'Eliminar', 
                course_review_path(@course, review), 
                method: :delete,
                class: 'btn btn-sm btn-danger',
                data: { confirm: '¿Estás seguro de eliminar esta reseña?' },
                form: { style: 'display: inline-block;' } %>
          <% elsif current_user&.admin? %>
            <%= button_to 'Eliminar', 
                course_review_path(@course, review), 
                method: :delete,
                class: 'btn btn-sm btn-danger',
                data: { confirm: '¿Estás seguro de eliminar esta reseña?' },
                form: { style: 'display: inline-block;' } %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No hay reseñas todavía para este curso.</p>
  <% end %>
</div>

<style>
/* Estilos para las reseñas */
.reviews-container {
  max-width: 800px;
  margin: 20px auto;
  padding: 0 20px;
}

.review-card {
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 15px;
  background-color: white;
}

.review-metadata {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}

.rating {
  color: #ffd700;
  margin: 10px 0;
}

.review-content {
  margin: 10px 0;
  line-height: 1.5;
}

.review-actions {
  margin-top: 10px;
  display: flex;
  gap: 8px;
}

.btn {
  padding: 6px 12px;
  border-radius: 4px;
  text-decoration: none;
  border: none;
  cursor: pointer;
}

.btn-primary {
  background-color: #007bff;
  color: white;
}

.btn-secondary {
  background-color: #6c757d;
  color: white;
}

.btn-danger {
  background-color: #dc3545;
  color: white;
}

.mb-3 {
  margin-bottom: 1rem;
}
</style>
