<div class="review-form">
  <%= form_with(model: [@course, @review], local: true) do |f| %>
    <div class="form-group">
    <%= f.label :rating, "Calificación (1-5 estrellas)" %>
    <%= f.select :rating, options_for_select(1..5) %>
    </div>
    
    <div class="form-group">
        <%= f.label :content, "Tu reseña" %>
        <%= f.text_area :content, rows: 5, class: 'form-control' %>
    </div>

    <%= f.submit 'Guardar', class: 'btn btn-primary' %>
    <%= link_to 'Cancelar', course_reviews_path(@course), class: 'btn btn-secondary' %>
<% end %>