<div class="review-form">
  <%= form_with(model: [@course, @review], local: true) do |f| %>
    <div class="form-group">
    <%= f.label :rating, "Calificación (1-5 estrellas)" %>
    <%= f.select :rating, options_for_select(1..5) %>
    </div>
    
    <div class="form-group">
        <%= f.label :content, "Tu reseña" %>
        <br>
        <%= f.text_field :content, class: 'form-control', style: 'width: 60%;' %>

    </div>
    <br>
    <%= f.submit 'Guardar', class: 'btn btn-primary', style: 'background-color: #2196F3; color: white; font-size: 1.25rem; padding: 12px 24px; border: none; border-radius: 4px;' %>
    <%= link_to 'Cancelar', course_reviews_path(@course), class: 'btn btn-secondary', style: 'background-color: #f44336; color: white; font-size: 1.25rem; padding: 12px 24px; border: none; border-radius: 4px;' %>
<% end %>