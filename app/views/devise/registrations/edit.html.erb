<h2 style="font-size: 36px;">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field" style="margin-bottom: 20px;">
    <%= f.label :email, style: "font-size: 20px;" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "font-size: 18px; padding: 12px; width: 100%; box-sizing: border-box;" %>
  </div>

  <div class="field" style="margin-bottom: 20px;">
    <%= f.label :name, style: "font-size: 20px;" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", style: "font-size: 18px; padding: 12px; width: 100%; box-sizing: border-box;" %>
  </div>

  <div class="field" style="margin-bottom: 20px;">
    <%= f.label :phone, style: "font-size: 20px;" %><br />
    <%= f.text_field :phone, autofocus: true, autocomplete: "phone", style: "font-size: 18px; padding: 12px; width: 100%; box-sizing: border-box;" %>
  </div>

  <div class="field" style="margin-bottom: 20px;">
    <%= f.label :description, style: "font-size: 20px;" %><br />
    <%= f.text_field :description, autofocus: true, autocomplete: "description", style: "font-size: 18px; padding: 12px; width: 100%; box-sizing: border-box;" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div style="font-size: 18px;">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field" style="margin-bottom: 20px;">
    <%= f.label :password, style: "font-size: 20px;" %> <i style="font-size: 16px;">(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", style: "font-size: 18px; padding: 12px; width: 100%; box-sizing: border-box;" %>
    <% if @minimum_password_length %>
      <br />
      <em style="font-size: 16px;"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field" style="margin-bottom: 20px;">
    <%= f.label :password_confirmation, style: "font-size: 20px;" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "font-size: 18px; padding: 12px; width: 100%; box-sizing: border-box;" %>
  </div>

  <div class="field" style="margin-bottom: 20px;">
    <%= f.label :imagen, style: "font-size: 20px;" %><br />
    <%= f.file_field :imagen, style: "font-size: 18px; padding: 12px; width: 100%; box-sizing: border-box;" %>
  </div>

  <div class="field" style="margin-bottom: 20px;">
    <%= f.label :current_password, style: "font-size: 20px;" %> <i style="font-size: 16px;">(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", style: "font-size: 18px; padding: 12px; width: 100%; box-sizing: border-box;" %>
  </div>

  <div class="actions" style="margin-top: 20px;">
    <%= f.submit "Update", style: "font-size: 18px; padding: 15px 30px; background-color: #010c55; color: white; border: none; border-radius: 5px; cursor: pointer;" %>
  </div>
<% end %>

<br> 
<br> 
<br> 
<h3 style="font-size: 24px;">Cancel my account</h3>

<div style="font-size: 18px;">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, style: "font-size: 18px; padding: 12px 24px; background-color: #f44336; color: white; border: none; border-radius: 5px; cursor: pointer;" %></div>

<%= link_to "Back", :back, style: "font-size: 18px; color: #010c55;" %>